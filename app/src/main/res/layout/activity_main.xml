<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:outlineSpotShadowColor="#CDC8C8"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFB800"
        android:gravity="center"
        android:orientation="vertical"
        android:outlineAmbientShadowColor="#000000"
        android:padding="16dp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="90dp">

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="CWH"
            android:textColor="#000000"
            android:textSize="70sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/image_placeholder3"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:contentDescription="Upload Image" />

        <TextView
            android:id="@+id/app_title2"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:text="Cook with \t\t\t\t\t\t\t\tHeart"
            android:textColor="#FFFFFF"
            android:textSize="55sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/image_placeholder2"
            android:layout_width="266dp"
            android:layout_height="11dp"
            android:contentDescription="Upload Image" />

        <TextView
            android:id="@+id/app_description"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Loading..."
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/image_placeholder5"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:contentDescription="Upload Image" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/image_placeholder"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:contentDescription="Upload Image" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>